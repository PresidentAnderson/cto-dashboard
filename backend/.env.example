# ============================================================================
# CTO Dashboard API v2.0 - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values

# ----------------------------------------------------------------------------
# DATABASE
# ----------------------------------------------------------------------------
# PostgreSQL connection string (Prisma format)
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/cto_dashboard"

# Legacy format (for compatibility)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cto_dashboard
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ----------------------------------------------------------------------------
# AUTHENTICATION
# ----------------------------------------------------------------------------
# API Keys (comma-separated for multiple keys)
# Generate secure random keys: openssl rand -hex 32
API_KEYS="your-api-key-1,your-api-key-2"

# ----------------------------------------------------------------------------
# GITHUB INTEGRATION
# ----------------------------------------------------------------------------
# GitHub Personal Access Token (for GitHub API access)
# Create at: https://github.com/settings/tokens
# Required scopes: repo, read:org
GITHUB_TOKEN="ghp_your_github_token_here"

# GitHub Webhook Secret (for webhook signature verification)
# Generate with: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET="your-webhook-secret-here"

# ----------------------------------------------------------------------------
# CORS CONFIGURATION
# ----------------------------------------------------------------------------
# Allowed origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,https://yourdomain.com"

# Legacy format
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# ----------------------------------------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------------------------------------
PORT=5000
NODE_ENV=development
LOG_LEVEL=info

# ----------------------------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------------------------
# General API rate limit (requests per second)
RATE_LIMIT_GENERAL=10

# Strict rate limit for expensive operations (requests per minute)
RATE_LIMIT_STRICT=5

# Legacy format
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------------------------------------
# METRICS CONFIGURATION
# ----------------------------------------------------------------------------
# Engineering hourly rate for cost calculations (in USD)
ENG_HOURLY_RATE=150

# ----------------------------------------------------------------------------
# OPTIONAL: SUPABASE (if using Supabase instead of local PostgreSQL)
# ----------------------------------------------------------------------------
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your_anon_key_here
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ----------------------------------------------------------------------------
# OPTIONAL: EXTERNAL INTEGRATIONS
# ----------------------------------------------------------------------------
# Slack webhook URL for notifications
# SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# SendGrid API key for email notifications
# SENDGRID_API_KEY="your-sendgrid-api-key"

# Sentry DSN for error tracking
# SENTRY_DSN="https://your-sentry-dsn"
