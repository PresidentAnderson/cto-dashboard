# Prisma Database Configuration
# Copy this file to .env and fill in your actual database credentials

# PostgreSQL Connection String
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA&sslmode=require

# For Supabase (recommended for production)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres?schema=public&sslmode=require"

# For local development
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cto_dashboard?schema=public"

# For Docker Compose
# DATABASE_URL="postgresql://postgres:postgres@db:5432/cto_dashboard?schema=public"

# Connection pooling (optional - for production)
# DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres?schema=public&sslmode=require"
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:6543/postgres?schema=public&pgbouncer=true"
